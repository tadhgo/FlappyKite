# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc 'Description of what the lane does'
  lane :tests do
    run_tests(
      scheme: 'FlappyKite',
      derived_data_path: './DerivedData',
      devices: ['iPhone 16 (18.0)'],
      ensure_devices_found: true,
      prelaunch_simulator: true,
      code_coverage: true
    )
  end

  desc 'Test normal CocoaPods approach'
  lane :test_normal_pods do
    cocoapods
    puts "✅ Normal CocoaPods approach worked"
  end

  desc 'Test clean CocoaPods approach'
  lane :test_clean_pods do
    cocoapods(clean: true)
    puts "✅ Clean CocoaPods approach worked"
  end
end